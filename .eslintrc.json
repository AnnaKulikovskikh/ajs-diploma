{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-syntax": ["off", "ForOfStatement"],
        "class-methods-use-this": [0, { "exceptMethods": ["farCounter", "distance", "addToolTip", "deleteToolTip"] }],
        "no-param-reassign": 0
    }
}
